<!DOCTYPE html>
<html>

<head>
    <title>
        <%=title%>
    </title>
    <script src="bootstrap.min.js"></script>
    <script src="jquery.min.js"></script>
    <script src="action.js"></script>
    <link rel="stylesheet" href="bootstrap.min.css">
</head>

<body>
    <div class="container" style="padding: 20px">
        <div class="row">
            <div class="col-md-4">
                <form action="/api/post" method="post">
                    <div class="form-group">
                        <label>Sno</label>
                        <input type="text" class="form-control" name="sno" placeholder="Enter Sno">
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="address" placeholder="Enter Address">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter Email">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

            <div class="col-md-8">
                <table class="table table-striped">
                    <thead>
                        <th>sno</th>
                        <th>name</th>
                        <th>address</th>
                        <th>email</th>
                        <th>action</th>
                    </thead>
                    <tbody>
                        <% contact.forEach(function(con){ %>
                        <tr>
                            <td>
                                <%= con.sno%>
                            </td>
                            <td>
                                <%= con.name%>
                            </td>
                            <td>
                                <%= con.address%>
                            </td>
                            <td>
                                <%= con.email%>
                            </td>
                            <td>
                                <a  onclick="onEdit('<%= con.name%>')" class="btn btn-outline-primary btn-sm">Edit</a>
                            </td>
                            <td>
                                <a onclick="onDelete('<%= con.sno%>')" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <% } )%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>